#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

void vecay(int a)
{
	for(int i=1;i<=a;i++)
	{
		for(int j=1;j<=a-i;j++)
		{
			printf(" ");
		}
			for(int b=1;b<=2*i-1;b++)
			{
				printf("*");
			}
		printf("\n");
	}
	
	for (int i = 1; i <= a / 2; i++) 
	{
        for (int j = 1; j <= a - 1; j++) 
		{
            printf(" ");
        }
        printf("*\n");
    }
}
int main()
{
	int a;
	printf("nhap chieu cao cay: \n");
	scanf("%d",&a);
	vecay(a);
	printf("Cay thong ne:>\nGiang Sinh Vui Ve Nhaaa");
	return 0;
}
